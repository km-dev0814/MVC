@model IEnumerable<Mvc_project.SiteMenu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NavURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentMenuID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NavURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentMenuID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
